<!DOCTYPE HTML>

<html>

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>News mApp</title>

    <!-- BOOTSTRAP CSS -->
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
    <!-- BOOTSTRAP THEME CSS -->
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap-theme.min.css">
    <!-- CSS STYLE SHEET -->
    <link rel="stylesheet" href="/stylesheets/style.css"/>
    <!-- LEAFLET CSS -->
    <link rel="stylesheet" href="http://cdn.leafletjs.com/leaflet-0.7.3/leaflet.css"/>
    <!-- MODERNIZR -->
    <script type="text/javascript" src="http://cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.2/modernizr.min.js"></script>

</head>

<body>

    <!-- TITLE HEADER -->

    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 text-center" id="title">news mApp</div>
        </div>
    </div>

    <!-- TOP BAR -->

    <div class="container">
        <div class="row" id="top-bar">
            <div class="col-xs-5 col-sm-4 col-md-6 col-lg-6">Click a country</div>
            <div class="col-xs-7 col-sm-8 col-md-6 col-lg-6 pull-right" id="date"></div>
        </div>
    </div>

    <!-- MAP CONTAINER -->

<!--     <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" id="map"></div>
        </div>
    </div> -->


    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
               <div class="panel panel-default">
                    <div class="panel-heading">
                        <div class="panel-title text-center" id="map">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>






    <!-- LOCATION CONTAINER -->

    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" id="location"></div>
        </div>
    </div>

    <!-- CITY AND NEWS CONTAINER -->

    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6" id="city"></div>
            <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6" id="newsSpace"></div>
        </div>
    </div>

    <!-- BACKGROUND CONTAINER -->

    <div class="container" id="background">
        <div class="row">
            <div class="col-sm-12 col-md-12 col-lg-12" id="backgroundSpace"></div>
        </div>
    </div>

    <!-- LOCATION TEMPLATE -->

    <script type="text/template" id="locationTemplate">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="panel-title text-center">
                    <h3><u>{{ country }}</u></h3>
                    <h4>{{ city }}</h4>
                </div>
            </div>
        </div>
    </script>

    <!-- CITY TEMPLATE -->

    <script type="text/template" id="cityTemplate">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Local Weather</u></h2>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 text-center">
                        <canvas id="weather"></canvas>
                        <h1>{{ condition }}</h1>
                    </div>
                    <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 pull-right text-center">
                        <p id="temp">{{ temp}}Â°F</p>
                    </div>
                </div>
            </div>
        </div>
    </script>

    <!-- NEWS TEMPLATE -->

    <script type="text/template" id="newsTemplate">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Country News</h3>
            </div>
            <ul class="list-group">
              <li class="list-group-item"><a href="{{ stories[0].link }}">{{ stories[0].title }}</a></li>
              <li class="list-group-item"><a href="{{ stories[1].link }}">{{ stories[1].title }}</a></li>
              <li class="list-group-item"><a href="{{ stories[1].link }}">{{ stories[2].title }}</a></li>
              <li class="list-group-item"><a href="{{ stories[1].link }}">{{ stories[3].title }}</a></li>
              <li class="list-group-item"><a href="{{ stories[1].link }}">{{ stories[4].title }}</a></li>
            </ul>
        </div>
    </script>

    <!-- BACKGROUND TEMPLATE -->

    <script type="text/template" id="backgroundTemplate">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Background Information</h3>
            </div>
            <div class="panel-body">
                {{ backgroundInfo.extract }}
            </div>
        </div>
    </script>

    <!-- JQUERY -->
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <!-- UNDERSCORE JS -->
    <script src="http://cdnjs.cloudflare.com/ajax/libs/underscore.js/1.6.0/underscore-min.js"></script>
    <script type="text/javascript">_.templateSettings = { interpolate: /\{\{(.+?)\}\}/g };</script>
    <!-- SKYCON JS -->
    <script type="text/javascript" src="/vendor/js/skycons.min.js"></script>
    <!-- LEAFLET JS -->
    <script src="http://cdn.leafletjs.com/leaflet-0.7.3/leaflet.js"></script>

    <!-- GeoJSON COUNTRY DATA -->
    <script src="/js/world.js"></script>
    <!-- DATE JS -->
    <script src="/js/date.js"></script>
    <!-- GeoJSON LAYER DATA -->
    <script src="/js/geoJSONLayer.js"></script>
    <!-- MAP LAYER DATA -->
    <script src="/js/map.js"></script>
    <!-- API CALLS -->
    <script src="/js/apiCalls.js"></script>
    <!-- TEMPLATE RENDERING -->
    <script src="/js/templateRendering.js"></script>

    <!-- BOOTSTAP JS -->
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
</body>

</html>
