<!DOCTYPE HTML>

<html>

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>News mApp</title>

    <!-- BOOTSTRAP CSS -->
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
    <!-- BOOTSTRAP THEME CSS -->
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap-theme.min.css">
    <!-- CSS STYLE SHEET -->
    <link rel="stylesheet" href="/stylesheets/style.css"/>
    <!-- LEAFLET CSS -->
    <link rel="stylesheet" href="http://cdn.leafletjs.com/leaflet-0.7.3/leaflet.css"/>
    <!-- MODERNIZR -->
    <script type="text/javascript" src="http://cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.2/modernizr.min.js"></script>

</head>

<body>

    <!-- TITLE HEADER -->

    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" id="title">news mApp</div>
            </div>
        </div>
    </div>

    <!-- TOP BAR -->

    <div class="container">
        <div class="row" id="top-bar">
            <div class="col-xs-5 col-sm-4 col-md-6 col-lg-6">Click a country</div>
            <div class="col-xs-7 col-sm-8 col-md-6 col-lg-6 pull-right" id="date"></div>
        </div>
    </div>

    <!-- MAP AND NEWS CONTAINER -->

    <div class="container">
        <div class="row">

    <!-- MAP -->

            <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6" id="map"></div>

    <!-- CITY/ COUNTRY/ WEATHER/ TEMP ROW -->

            <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                <div class="row" id="geography">

    <!-- CITY -->

                    <div class="col-xs-9 col-sm-9 col-md-9 col-lg-9" id="city"></div>

    <!-- WEATHER -->
                    <div class="col-xs-1 col-sm-1 col-md-1 col-lg-1 pull-right">
                        <canvas class="pull-right" id="weather"></canvas>
                        <div class="pull-right" id="temp"></div>
                    </div>
                </div>

    <!-- NEWS ROW -->

                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" id="newsSpace"></div>
                </div>
            </div>
        </div>
    </div>

    <!-- BACKGROUND INFORMATION CONTAINER -->

    <div class="container" id="background">
        <div class="row">
            <div class="col-sm-12 col-md-12 col-lg-12" id="backgroundSpace"></div>
        </div>
    </div>

    <!-- CITY TEMPLATE -->

    <script type="text/template" id="cityTemplate">
        <h4><u>{{ country }}</u></h4>
        <h5>{{ city }}</h5>
    </script>

    <!-- WEATHER TEMPLATE -->

    <script type="text/template" id="tempTemplate">
        {{ temp}}Â°F
    </script>

    <!-- COUNTRY BACKGROUND TEMPLATE -->

    <script type="text/template" id="backgroundTemplate">
        <h4><u>Background Information</u></h4>
        {{ backgroundInfo.extract }}
    </script>

    <!-- NEWS TEMPLATE -->

    <script type="text/template" id="newsTemplate">
        <h5>Country News</h5>
        <ul>
            <li><a href="{{ stories[0].link }}">{{ stories[0].title }}</a></li>
            <li><a href="{{ stories[1].link }}">{{ stories[1].title }}</a></li>
            <li><a href="{{ stories[2].link }}">{{ stories[2].title }}</a></li>
            <li><a href="{{ stories[3].link }}">{{ stories[3].title }}</a></li>
            <li><a href="{{ stories[4].link }}">{{ stories[4].title }}</a></li>
        </ul>
    </script>

    <!-- JQUERY -->
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <!-- UNDERSCORE JS -->
    <script src="http://cdnjs.cloudflare.com/ajax/libs/underscore.js/1.6.0/underscore-min.js"></script>
    <script type="text/javascript">_.templateSettings = { interpolate: /\{\{(.+?)\}\}/g };</script>
    <!-- SKYCON JS -->
    <script src="http://learn.themakersquare.com/materials/week-7/weather-icons.js"></script>
    <!-- LEAFLET JS -->
    <script src="http://cdn.leafletjs.com/leaflet-0.7.3/leaflet.js"></script>

    <!-- GeoJSON COUNTRY DATA -->
    <script src="/js/world.js"></script>
    <!-- DATE JS -->
    <script src="/js/date.js"></script>
    <!-- MAP LAYER DATA -->
    <script src="/js/map.js"></script>
    <!-- GeoJSON LAYER DATA -->
    <script src="/js/geoJSONLayer.js"></script>
    <!-- API CALLS -->
    <script src="/js/apiCalls.js"></script>
    <!-- TEMPLATE RENDERING -->
    <script src="/js/templateRendering.js"></script>

    <!-- BOOTSTAP JS -->
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
</body>

</html>
